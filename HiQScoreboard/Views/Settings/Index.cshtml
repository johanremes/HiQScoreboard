@model HiQScoreboard.Models.SettingsModel

@{
    ViewBag.Title = "Settings";
}

<div class="row" id="wrapper">
    <div class="col-md-12 ">
        <h2 id="title">Inställningar</h2>

        <div class="form-horizontal">
            <div class="form-group input-lg">
                <label class="control-label col-md-4 col-xs-4 col-sm-3">Push</label>
                <div class="col-md-8 col-xs-8 col-sm-9">
                    @Html.RadioButtonFor(model => model.AllowPush, false, new { @disabled="true" })
                    <button class="js-push-button btn btn-lg btn-primary" disabled>
                        Tillåt
                    </button>
                </div>
            </div>
            <div class="form-group input-lg">
                <label class="control-label col-md-4 col-xs-4 col-sm-3">Kontor</label>
                <div class="col-md-4 col-xs-8 col-sm-9">
                    @Html.DropDownListFor(model => model.Office.Name, new SelectList(ViewBag.Offices, "Id", "Name"), new { @class = "form-control input-lg" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group" style="margin-bottom:0px">
            <div class="col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
                <input type="submit" value="Spara" class="btn btn-lg" onclick="" />
            </div>
        </div>
        <br />
    </div>
</div>



