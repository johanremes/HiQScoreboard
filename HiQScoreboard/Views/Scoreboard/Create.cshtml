@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (Convert.ToString(ViewData["Confirmed"]) == "Not Confirmed")
    {
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <div class="row">
                <div class="col-md-4"><label class="control-label">Office</label></div>
                </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.OfficesId, new SelectList(ViewBag.Offices, "Id", "Name"), new { @class = "form-control"})
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-4"><label class="control-label">Question 1</label></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Q1, new { @id = "Q1Value", @type = "range", min = 0, max = 100, @class = "form-control col-md-2", @onchange = "onQuestionValueChangeEvent(LabelQ1, value);" })
                </div>
                <div class="col-md-1">
                    @Html.Label(Convert.ToString(ViewData["Q1"] + "%"), new { id = "LabelQ1", @class = "control-label col-md-1" })
                </div>
             </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-4"><label class="control-label">Question 2</label></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Q2, new { @id = "Q2Value", @type = "range", min = 0, max = 100, @class = "form-control col-md-2", @onchange = "onQuestionValueChangeEvent(LabelQ2, value);" })
                </div>
                <div class="col-md-1">
                    @Html.Label(Convert.ToString(ViewData["Q2"] + "%"), new { id = "LabelQ2", @class = "control-label col-md-1" }) 
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-4"><label class="control-label">Question 3</label></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Q3, new { @id = "Q3Value", @type = "range", min = 0, max = 100, @class = "form-control col-md-2", @onchange = "onQuestionValueChangeEvent(LabelQ3, value);" })
                </div>
                <div class="col-md-1">
                    @Html.Label(Convert.ToString(ViewData["Q3"] + "%"), new { id = "LabelQ3", @class = "control-label col-md-1" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-4"><label class="control-label">Question 4</label></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.Q4, new { @id = "Q4Value", @type = "range", min = 0, max = 100, @class = "form-control col-md-2", @onchange = "onQuestionValueChangeEvent(LabelQ4, value);" })
                </div>
                <div class="col-md-1">
                    @Html.Label(Convert.ToString(ViewData["Q4"] + "%"), new { id = "LabelQ4", @class = "control-label col-md-1" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Confirm" class="btn btn-primary" onclick="onConfirmButtonClicked()" />
            </div>
        </div>
    </div>

    }
    else
    {
        <div>
            @Html.Label(Convert.ToString(ViewData["Confirmed"]))
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
